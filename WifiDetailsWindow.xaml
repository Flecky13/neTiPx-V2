<Window x:Class="neTiPx.WifiDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WiFi Netzwerk Details"
        Height="600"
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,3,10,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel>
            <!-- Header with Signal -->
            <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock x:Name="TxtSignalSymbol" FontSize="48" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="TxtSSID" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock x:Name="TxtSignalStrength" FontSize="14" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Basic Information -->
            <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Basis-Informationen" Style="{StaticResource SectionHeader}"/>
                    <Separator Margin="0,5,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="SSID:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtSSIDValue" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="BSSID:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtBSSIDValue" Style="{StaticResource ValueStyle}" FontFamily="Consolas"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Netzwerktyp:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtNetworkType" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Verschlüsselt:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtSecured" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Zuletzt gesehen:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TxtLastSeen" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="PHY ID:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TxtPhyId" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Signal Information -->
            <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Signal-Informationen" Style="{StaticResource SectionHeader}"/>
                    <Separator Margin="0,5,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Signal (dBm):" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtSignalDbm" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Signal (%):" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                            <ProgressBar x:Name="ProgressSignal" Width="200" Height="20" Margin="0,3,10,3"/>
                            <TextBlock x:Name="TxtSignalPercent" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Link Quality:" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                            <ProgressBar x:Name="ProgressLinkQuality" Width="200" Height="20" Margin="0,3,10,3"/>
                            <TextBlock x:Name="TxtLinkQuality" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Channel & Frequency -->
            <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Kanal &amp; Frequenz" Style="{StaticResource SectionHeader}"/>
                    <Separator Margin="0,5,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Kanal:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtChannel" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Frequenz:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtFrequency" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="PHY Typ:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtPhyType" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Beacon Intervall:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtBeaconInterval" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Supported Rates -->
            <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Unterstützte Datenraten" Style="{StaticResource SectionHeader}"/>
                    <Separator Margin="0,5,0,10"/>
                    <TextBlock x:Name="TxtSupportedRates" Style="{StaticResource ValueStyle}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Technical Details -->
            <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Technische Details" Style="{StaticResource SectionHeader}"/>
                    <Separator Margin="0,5,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Capabilities:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtCapabilities" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Reg. Domain:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtRegDomain" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Close Button -->
            <Button Content="Schließen"
                    Width="120"
                    Height="32"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Click="BtnClose_Click"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </ScrollViewer>
</Window>
