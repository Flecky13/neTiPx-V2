<Window x:Class="neTiPx.MainWindow"
    x:Name="ThisWindow"
    Visibility="Hidden"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bh="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:neTiPx"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowState="{Binding WindowState}"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        Title="neTiPx - Netwerk Infos"
        Height="Auto"
        Width="320"
        Topmost="True"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="Height">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <local:NotifyIconWrapper x:Name="TrayIcon" NotifyRequest="{Binding NotifyRequest}" Grid.ColumnSpan="3">
            <bh:Interaction.Triggers>
                <bh:EventTrigger EventName="HideSelected">
                    <bh:InvokeCommandAction Command="{Binding NotifyIconHideCommand}"/>
                </bh:EventTrigger>
                <bh:EventTrigger EventName="ShowSelected">
                    <bh:InvokeCommandAction Command="{Binding NotifyIconShowCommand}"/>
                </bh:EventTrigger>
                <bh:EventTrigger EventName="ExitSelected">
                    <bh:InvokeCommandAction Command="{Binding NotifyIconExitCommand}"/>
                </bh:EventTrigger>
                <bh:EventTrigger EventName="TrayMouseEnter">
                    <bh:InvokeCommandAction Command="{Binding NotifyIconShowCommand}" />
                </bh:EventTrigger>
                <bh:EventTrigger EventName="TrayMouseLeave">
                    <bh:InvokeCommandAction Command="{Binding NotifyIconHideCommand}" />
                </bh:EventTrigger>
            </bh:Interaction.Triggers>
        </local:NotifyIconWrapper>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition x:Name="RahmenOben" Height="5"></RowDefinition>
                <RowDefinition x:Name="InfosIp" Height="25"></RowDefinition>
                <RowDefinition x:Name="TrennLinie1" Height="5"></RowDefinition>
                <RowDefinition x:Name="UeberschriftNIC1" Height="25"></RowDefinition>
                <RowDefinition x:Name="InfosNIC1" Height="Auto"></RowDefinition>
                <RowDefinition x:Name="TrennLinie2" Height="5"></RowDefinition>
                <RowDefinition x:Name="UeberschriftNIC2" Height="25"></RowDefinition>
                <RowDefinition x:Name="InfosNIC2" Height="Auto"></RowDefinition>
                <RowDefinition x:Name="RahmenUnten" Height="5"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--Aussenrahmen-->
            <!--Links-->
            <Border Height="Auto"
                Grid.Row="0"
                Grid.RowSpan="8"
                Background="Goldenrod"/>
            <!--Rechts-->
            <Border Height="Auto"
                Grid.Column="3"
                Grid.RowSpan="8"
                Background="Goldenrod"/>
            <!--Oben-->
            <Border Height="5"
                Grid.Row="0"
                Grid.ColumnSpan="4"
                Background="Goldenrod"/>
            <!--Unten-->
            <Border Height="5"
                Grid.Row="8"
                Grid.ColumnSpan="4"
                Background="Goldenrod"/>
            <!--Aussenrahmen ENDE-->
            <!--Innen Trenn Linien-->
            <Border Height="5"
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Background="Goldenrod"/>
            <Border Height="5"
                Grid.Row="5"
                Grid.ColumnSpan="4"
                Background="Goldenrod"/>
            <!--Innen Trenn Linien ENDE-->

            <!--Überschriftlinie Grid NIC 1-->
            <Border Height="Auto"
                Grid.Column="1"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Background="PapayaWhip"/>
            <!--Überschriftlinie Grid NEÍC 2-->
            <Border Height="Auto"
                Grid.Column="1"
                Grid.Row="6"
                Grid.ColumnSpan="2"
                Background="PapayaWhip"/>
            <!--Überschriftlinie ENDE-->

            <!--ISP Bereich Grid Row 0-->
            <Label x:Name="ISP_Name"
               Height="20"
               Grid.Column="1"
               Grid.Row="1"
               Margin="3"
               Content="Öffentliche IP :"
               FontSize="9"
               FontWeight="Bold"
               Foreground="Black"/>
            <Label x:Name="ISPInfos"
               Height="20"
               Grid.Column="2"
               Grid.Row="1"
               Margin="3"
               Content="Keine Verbindung"
               FontSize="9"
               FontWeight="Normal"
               Foreground="Black"/>

            <!--Überschrift NIC1 -->
            <Label x:Name="NIC1_Name"
               Height="20"
               Grid.Column="1"
               Grid.Row="3"
               Margin="1"
               Content="Netzwerk 1"
               FontSize="9"
               FontWeight="Bold"
               Foreground="Black"/>
            <!--Überschrift NIC2 -->
            <Label x:Name="NIC2_Name"
               Height="20"
               Grid.Column="1"
               Grid.Row="6"
               Margin="1"
               Content="Netzwerk 2"
               FontSize="9"
               FontWeight="Bold"
               Foreground="Black"/>

            <TextBlock x:Name="NIC1_INFOS1"
                   Grid.Column="1"
                   Grid.Row="4"
                   FontSize="9"
                   FontFamily="Consolas"
                   TextWrapping="Wrap"
                   TextAlignment="Right"
                   Margin="5"
                   Foreground="Black"
                   Text="NIC1:Labels"/>
            <TextBlock x:Name="NIC1_INFOS2"
                   Grid.Column="2"
                   Grid.Row="4"
                   FontSize="9"
                   FontFamily="Consolas"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   Margin="5"
                   Foreground="Black"
                   Text="NIC1:Values"/>
            <TextBlock x:Name="NIC2_INFOS1"
                   Grid.Column="1"
                   Grid.Row="7"
                   FontSize="9"
                   FontFamily="Consolas"
                   TextWrapping="Wrap"
                   TextAlignment="Right"
                   Margin="5"
                   Foreground="Black"
                   Text="NIC2:Labels"/>
            <TextBlock x:Name="NIC2_INFOS2"
                   Grid.Column="2"
                   Grid.Row="7"
                   FontSize="9"
                   FontFamily="Consolas"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   Margin="5"
                   Foreground="Black"
                   Text="NIC2:Values"/>
        </Grid>
    </Grid>
</Window>
