<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="neTiPx.UpdateCheckDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update verfügbar"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="#F0F0F0"
        Foreground="Black">
    <Grid Margin="24" MinWidth="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Eine neue Version ist verfügbar!"
                   FontSize="16"
                   FontWeight="Bold"
                   TextWrapping="Wrap"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,16,0,0">
            <TextBlock x:Name="CurrentVersionText"
                       FontSize="14"
                       Margin="0,0,0,8"
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="NewVersionText"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Text="Möchtest du jetzt updaten oder später?"
                   FontSize="12"
                   TextWrapping="Wrap"
                   Foreground="#555"
                   Margin="0,12,0,0"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button x:Name="BtnSpäter"
                    Width="100"
                    Height="36"
                    Margin="0,0,8,0"
                    Content="Später"
                    Click="BtnSpäter_Click"
                    Background="#E0E0E0"
                    Foreground="Black"/>
            <Button x:Name="BtnUpdaten"
                    Width="100"
                    Height="36"
                    Content="Updaten"
                    Click="BtnUpdaten_Click"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
